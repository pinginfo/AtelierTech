<Window x:Class="RobotMove.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotMove"
        mc:Ignorable="d"
        Title="Rob'Move - Connection" Height="165" Width="330" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="cbxBluetoothDevices" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="148"/>
        <ProgressBar Margin="10,0,10,10" Height="15" VerticalAlignment="Bottom"/>
        <Label Content="Connect to Lego Mindstorm Ev3" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Bluetooth devices" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnConnect" Content="Connect to device" HorizontalAlignment="Left" Margin="163,78,0,0" VerticalAlignment="Top" Width="149" Height="22"/>

    </Grid>
</Window>
