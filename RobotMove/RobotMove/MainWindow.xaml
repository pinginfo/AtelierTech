                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="b8" Click="Button_Click" Content="135°" Margin="428,668,317,54.5">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Ellipse Fill="Gray"/>
