        <Button x:Name="b0" Click="Button_Click" Content="-45°" Margin="268,515,477,207.5" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Ellipse Fill="Gray"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="b1" Click="Button_Click" Content="↑" Margin="349,515,396,207.5" RenderTransformOrigin="0.5,0.505">
